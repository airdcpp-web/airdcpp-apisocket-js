	"version": "0.2.0",
	"configurations": [
    {
      "name": "Run Tests With Debugger",
      "type": "node",
      "request": "launch",
      "port": 5858,
      //"stopOnEntry": false,
      "runtimeArgs": [
        "--inspect-brk=5858",
        "${workspaceRoot}/node_modules/jest-cli/bin/jest",
        "--runInBand",
        "--coverage",
        "false"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
	]
}